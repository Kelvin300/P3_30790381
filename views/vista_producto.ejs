    <script>
        $(document).ready(function(){
          $(".owl-carousel").owlCarousel({
            items: 1,
            nav: true
          });
        });
        $(document).ready(function() {
    var valorSeleccionado = 0;

    $('.fa-star').on('mouseenter', function() {
        var valor = $(this).data('value');

        // Resaltar las estrellas seleccionadas
        $('.fa-star').each(function() {
            if ($(this).data('value') <= valor) {
                $(this).addClass('hover');
            } else {
                $(this).removeClass('hover');
            }
        });
    });

    $('.fa-star').on('mouseleave', function() {
        // Remover la selección cuando el cursor sale de las estrellas
        $('.fa-star').removeClass('hover');
        $('.fa-star').each(function() {
            if ($(this).data('value') <= valorSeleccionado) {
                $(this).addClass('selected');
            } else {
                $(this).removeClass('selected');
            }
        });
    });

    $('.fa-star').on('click', function() {
        valorSeleccionado = $(this).data('value');
        $('#calificacion').val(valorSeleccionado);
        $('.fa-star').each(function() {
            if ($(this).data('value') <= valorSeleccionado) {
                $(this).addClass('selected');
            } else {
                $(this).removeClass('selected');
            }
        });
    });
});





      </script>
