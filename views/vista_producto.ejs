                                                                  <i class="fa fa-star" data-value="<%= i %>" <% if(i <= calificacion) { %>class="selected"<% } %>></i>
                                                                <% } %>
                                                                <input type="hidden" name="calificacion" id="calificacion">
                                                              </div>
                                                            </div>
                                                            <p><input type="submit" value="Submit"></p>
                                                          </div>
                                                        </form>
