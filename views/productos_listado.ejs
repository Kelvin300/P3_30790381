        <div class="container">
            <div style="margin-top: 10px;" class="view-switcher">
                <button class="btn btn-primary" id="grid-view-button">Vista de cuadrícula</button>
                <button class="btn btn-primary" id="list-view-button">Vista de lista</button>
                <h2 style="font-size: large; margin-top: 10px;">Filtrar por:</h2>
                <div>
                    <form action="/" method="GET" style="display: flex; justify-content: space-between;">
                        <div style="flex: 1; margin-right: 10px;">
                          <label>Nombre</label>
                          <input type="text" name="nombre" id="nombre">
                        </div>
                        <div style="flex: 1; margin-right: 10px;">
                          <label for="marca">Marca</label>
                          <input type="text" name="marca" id="marca">
                        </div>
                        <div style="flex: 1; margin-right: 10px;">
                          <label for="peso">Peso (g)</label>
                          <input type="text" name="peso" id="peso">
                        </div>
                        <div style="flex: 1; margin-right: 10px;">
                            <label for="descripcion">Descripcion</label>
                            <input type="text" name="descripcion" id="descripcion">
                          </div>
                        <div style="flex: 1; margin-right: 10px;">
                            <label for="promedio">Promedio</label>
                            <input type="number" step="0.1" min="1" max="5" name="promedio" id="promedio">
                          </div>
                        <div style="flex: 1; margin-right: 10px;">
                          <label for="categoria">Categoria</label>
                          <select class="form-control" name="categoria" id="categoria">
                            <option value="">Selecciona una categoría</option>
                            <% for (var i = 0; i < categorias.length; i++) { %>
                              <option value="<%= categorias[i].nombre %>"><%= categorias[i].nombre %></option>
                            <% } %>
                          </select>
                        </div>
                        
                        <div style="flex: 1; display: flex; flex-direction: column; justify-content: flex-end;">
                            <button type="submit" class="btn btn-primary">Filtrar</button>
                          </div>
                          
                          
                      </form>                      
                </div>
              </div>
              
              <div id="products-container" class="grid-view">
                <% for (var i = 0; i < data.length; i++) { %>
                  <a href="/producto/<%= data[i].id %>">
                    <div class="col-md-3 col-sm-6">
                      <div class="single-shop-product">
                        <div class="product-upper">
                          <img src="<%= data[i].imagen_destacada %>" alt="<%= data[i].nombre %>">
                        </div>
                        <div class="product-info">
                          <h2><%= data[i].nombre %></h2>
                          <p><b>Marca:</b> <%= data[i].marca %></p>
                          <p><b>Peso (g):</b> <%= data[i].peso %></p>
                          <p><b>Categoria:</b> <%= data[i].categoria %></p>
                          <p><b>Promedio de calificaciones:</b> <%= data[i].promedio %> <i class="fa-star fa" style="color: gold;"></i></p>
                          <p><%= data[i].descripcion %></p>
                          
                          <div class="product-carousel-price">
                            <ins>$<%= data[i].precio %></ins>
                          </div>
                          <!-- Aquí se muestra el promedio de las calificaciones -->
                         
                        </div>
                      </div>
                    </div>
                  </a>
                <% } %>
                <% if (mensaje) { %>
                  <p><%= mensaje %></p>
                <% } %>
              </div>
              <table id="product-table" class="table-style-off table table-responsive table-striped table-bordered table-hover">
                <tr>
                  <th>Imagen destacada</th>
                  <th>Nombre</th>
                  <th>Marca</th>
                  <th>Peso (g)</th>
                  <th>Descripcion</th>
                  <th>Categoria</th>
                  <th>Promedio de calificaciones</th>
                  <th>Precio</th>
                  <!-- Aquí se agrega una nueva celda para el promedio de las calificaciones -->
                  
                </tr>
                <% for (var i = 0; i < data.length; i++) { %>
                <tr>
                  <td><img src="<%=data[i].imagen_destacada %>" alt="<%= data[i].nombre %>"></td>
                  <td><%= data[i].nombre %></td>
                  <td><%= data[i].marca %></td>
                  <td><%= data[i].peso %></td>
                  <td><%= data[i].descripcion %></td>
                  <td><%= data[i].categoria %></td>
                  <td><%= data[i].promedio %></td>
                  <td><%= data[i].precio %></td>
                  <!-- Aquí se muestra el promedio de las calificaciones -->
                  
                </tr>
                <% } %>
