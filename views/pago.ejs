            <div class="panel-body">
              <div class="row">
                <div class="col-sm-6">
                  <!-- Aquí va la imagen del producto -->
                  <img src="<%= imagen.url %>" alt="<%= producto.nombre %>">

                  <div class="product-inner-price">
                    <ins style="font-size: 200% ;">$<%= producto.precio %></ins> 
                </div>   
                </div>
                <div class="col-sm-6">
                  <!-- Aquí va el formulario de pago -->
                  <form action="/submit-payment" method="post">
                    <div class="form-group">
                      <label for="name">Nombre:</label>
                      <input type="text" placeholder="ejepmplo ejemplo" class="form-control" id="name" name="name">
                    </div>
                    <div class="form-group">
                      <label for="email">Correo electrónico:</label>
                      <input type="email" placeholder="ejemplo@ejemplo.com" class="form-control" id="email" name="email">
                    </div>
                    <div class="form-group">
                      <label for="phone">Número de teléfono:</label>
                      <input type="number" placeholder="01234567890" class="form-control" id="phone" name="phone">
                    </div>
                    <div class="form-group">
                      <label for="cardNumber">Número de tarjeta de crédito:</label>
                      <input type="number" placeholder="4111111111111111" class="form-control" id="cardNumber" name="cardNumber">
                    </div>
                    <div class="form-group">
                      <label for="expiryDate">Fecha de vencimiento:</label>
                      <input type="text" placeholder="01/02" class="form-control" id="expiryDate" name="expiryDate">
                    </div>
                    <div class="form-group">
                      <label for="cvv">CVV:</label>
                      <input type="number" placeholder="123" class="form-control" id="cvv" name="cvv">
                    </div>
                    <input type="hidden" id="productId" name="productId" value="<%= producto.id %>">
                    <input type="hidden" id="productPrice" name="productPrice" value="<%= producto.precio %>">
                    <input type="hidden" id="productName" name="productName" value="<%= producto.nombre %>">

                    <button type="submit" class="btn btn-primary">Enviar</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
