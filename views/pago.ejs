  <script>
    document.querySelector('form').addEventListener('submit', function(event) {
      var cardNumber = document.getElementById('cardNumber').value;
      var phone = document.getElementById('phone').value;
      var expiryDate = document.getElementById('expiryDate').value;
      var cvv = document.getElementById('cvv').value;
  
      var cardNumberRegex = /^[0-9]{16}$/;
      var phoneRegex = /^[0-9]{11}$/; // Asume que el número de teléfono tiene 10 dígitos
      var expiryDateRegex = /^(0[1-9]|1[0-2])\/?([0-9]{4}|[0-9]{2})$/; // Formato MM/AA o MM/AAAA
      var cvvRegex = /^[0-9]{3,4}$/; // Asume que el CVV tiene 3 o 4 dígitos
  
      if (!cardNumberRegex.test(cardNumber)) {
        alert('Por favor, introduce un número de tarjeta de crédito válido.');
        event.preventDefault();
      } else if (!phoneRegex.test(phone)) {
        alert('Por favor, introduce un número de teléfono válido.');
        event.preventDefault();
      } else if (!expiryDateRegex.test(expiryDate)) {
        alert('Por favor, introduce una fecha de vencimiento válida.');
        event.preventDefault();
      } else if (!cvvRegex.test(cvv)) {
        alert('Por favor, introduce un CVV válido.');
        event.preventDefault();
      }
    });
  </script>
  
